<h2>New Users, please: </h2>

<div class="new">
<h3>SIGN UP HERE</h3>

<%= form_for @user do |f| %>

 <%= f.label :username %>:
  <%= f.text_field :username %><br />

  <%= f.label :fname %>:
  <%= f.text_field :fname %><br />

  <%= f.label :lname %>:
  <%= f.text_field :lname %><br />

   <%= f.label :email %>:
  <%= f.text_field :email %><br />

   <%= f.label :password %>:
  <%= f.text_field :password %><br />

  <%= f.submit %>
<% end %>
</div>

<div class="list"><h4>List of current users: </h4></div>
<div class="users">
<% @users.each do |user| %>     

<%= link_to user.username, user_path(user) %>
<br> 
<% end %>
</div>